<Window x:Class="WPF_Dusza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Dusza"
        mc:Ignorable="d"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        Title="MainWindow" Height="450" Width="800"
        Background="gray"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/profilePic.png"/>
        <Label Content="Felhasználónév" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="tb_UserName" Grid.Row="2" VerticalAlignment="Center" Margin="5" Style="{StaticResource TextBoxStyle}"/>
        <Label Content="Jelszó" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource LabelStyle}"/>
        <StackPanel Grid.Row="4">
            <PasswordBox x:Name="pb_Password" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Center" Width="140" Margin="5" Style="{StaticResource PasswordBoxStyle}"/>
            <Button Content="Belépés" Margin="5" Click="ValidateLogin" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Regisztrálás" Margin="5" Click="RegisterUser" Style="{StaticResource ButtonStyle}"/>
            <Button Content="bettingpage" Click="Button_Click"/>
        </StackPanel>
          
        <Image gif:AnimationBehavior.SourceUri="/Files/gamblecore.gif" Grid.Column="1" Grid.RowSpan="5"/>
    </Grid>
</Window>
