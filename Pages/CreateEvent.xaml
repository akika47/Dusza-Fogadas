<Window x:Class="WPF_Dusza.Pages.CreateEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Dusza.Pages"
        mc:Ignorable="d"
        Title="CreateEvent" Height="450" Width="800"
        Background="DarkGray"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Label Content="Játék neve" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Label Content="Szervező neve" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Label Content="Játékosok neve" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Label Content="Szorzók" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Image Source="\Images\profilePic.png" Grid.Column="4"/>

        <TextBox x:Name="txtEventName" Grid.Row="1" Grid.Column="0" Width="120" Height="50" />
        <TextBox x:Name="txtOrganizerName" Grid.Row="1" Grid.Column="1" Width="120" Height="50" />
        <TextBox x:Name="txtPlayerNames" Grid.Row="1" Grid.Column="2" Width="120" Height="50" />
        <TextBox x:Name="txtMultiplier" PreviewTextInput="txtMultiplier_PreviewTextInput" Grid.Row="1" Grid.Column="3" Width="120" Height="50" />
        <Button x:Name="btnCreateEvent" Grid.Row="1" Grid.Column="4" Width="120" Height="50" Content="Új meccs felvevése" Click="btnCreateEvent_Click"/>

        <ListView x:Name="lvEvents" Grid.Row="2" Grid.ColumnSpan="5"/>
    </Grid>
</Window>
