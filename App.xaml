<Application x:Class="WPF_MVVM_Template.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_MVVM_Template"
             xmlns:view="clr-namespace:WPF_MVVM_Template.MVVM.View"
             xmlns:viewmodels="clr-namespace:WPF_MVVM_Template.MVVM.ViewModel"
             >
    <Application.Resources>
        <!--Data templates for different views-->
        <DataTemplate DataType="{x:Type viewmodels:MainViewModel}">
            <view:MainViewModel/>
        </DataTemplate>
         <!-- Add more Datatemplates here -->
    </Application.Resources>
</Application>
