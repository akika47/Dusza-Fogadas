<Application x:Class="WPF_Dusza.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_Dusza"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="GameRowItemTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding GameName}"/>
                <TextBox Text="{Binding OrganizerName}"/>
                <TextBox Text="{Binding Participants}"/>
                <TextBox Text="{Binding Events}"/>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
